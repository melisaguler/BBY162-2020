    if kullanici_adi == "MelisaGuler" and sifre == "2618":
        print("\t\t\tHoş Geldiniz.")
        kitaplar = oku()
        while True:
            print()
            islem = input("Arama yapmak için (A)\nYeni eser eklemek için (E)\nEser silmek için (S)\nTüm eserleri listelemek için (T)\nÇıkmak için (Ç)\nTuşlarına basınız: ")
            if islem == "A" or islem == "a":
                bulunan = []
